# Nexi Hub Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Stripe Configuration (REQUIRED for financial data)
STRIPE_SECRET_KEY=sk_live_your_actual_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_actual_stripe_publishable_key_here

# Database Configuration (for production MySQL)
DB_HOST=localhost
DB_NAME=nexihub_production
DB_USER=nexihub_user
DB_PASS=your_secure_database_password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@nexihub.com
SMTP_PASS=your_email_password

# Google Analytics (optional)
GA_PROPERTY_ID=GA_PROPERTY_ID_HERE
GA_SERVICE_ACCOUNT_JSON=path/to/service-account.json

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Security Settings
SESSION_TIMEOUT=3600
CSRF_TOKEN_EXPIRY=1800
API_RATE_LIMIT_MINUTES=5

# Feature Flags
USE_REAL_FINANCIAL_DATA=true
USE_REAL_ANALYTICS_DATA=true
USE_MOCK_DATA_FALLBACK=false

# Cache Settings
API_CACHE_DURATION=300
